{% extends 'base.html.twig' %}

{% block body %}
{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
    <div class="wrapper wrapper-full-page">
        <div class="full-page login-page" data-color="" data-image="assets/img/road.jpg">
            <div class="full-page-background" style="background-image: url('assets/img/anonymous-bg.jpg')"></div>
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            {% block fos_user_content %}
                            {% endblock fos_user_content %}
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer footer-transparent">
                <div class="container">
                    <p class="copyright text-center" style="color:#ffffff">&copy; 2017 Richard West - Computer Network Security for a Small Scale Network</p>
                </div>
            </footer>
        </div>
    </div>
{% endblock %}

