{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Asset creation</h4>
                    <p class="category">Create a new asset</p>
                </div>
                <div class="content">
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="footer">
                    <input type="submit" value="Create" class="btn btn-success"/>
                    {{ form_end(form) }}
                    <a href="{{ path('asset_index') }}" class="btn btn-primary">Back to the list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
