{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Asset {{ asset.id }}</h4>
                    <p class="category">Company Assets</p>
                </div>
                <div class="content">
                    <table>
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ asset.id }}</td>
                        </tr>
                        <tr>
                            <th>Shortcode</th>
                            <td>{{ asset.shortCode }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ asset.name }}</td>
                        </tr>
                        <tr>
                            <th>Make</th>
                            <td>{{ asset.make }}</td>
                        </tr>
                        <tr>
                            <th>Model</th>
                            <td>{{ asset.model }}</td>
                        </tr>
                        <tr>
                            <th>Serial</th>
                            <td>{{ asset.serial }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ asset.location }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>{{ asset.category }}</td>
                        </tr>
                        <tr>
                            <th>Specification</th>
                            <td>{{ asset.specification }}</td>
                        </tr>
                        <tr>
                            <th>Notes</th>
                            <td>{{ asset.notes }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="footer">
                        <a href="{{ path('asset_index') }}" class="btn btn-primary">Back to the list</a>
                        <a href="{{ path('asset_edit', { 'id': asset.id }) }}" class="btn btn-info">Edit</a>
                        <a href="{{ url('asset_delete', {'id': asset.id }) }}" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
